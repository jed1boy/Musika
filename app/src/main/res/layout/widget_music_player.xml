<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_background"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:contentDescription="Album Art" />

    <!-- Song Info Container -->
    <LinearLayout
        android:id="@+id/widget_song_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_album_art"
        android:layout_toStartOf="@id/widget_controls"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Song Title -->
        <TextView
            android:id="@+id/widget_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MONEY AND VIBES"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Artist Name -->
        <TextView
            android:id="@+id/widget_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nemzzz"
            android:textColor="#99FFFFFF"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Controls Container -->
    <LinearLayout
        android:id="@+id/widget_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/widget_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/skip_previous"
            android:contentDescription="Previous"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/widget_play_pause_background"
            android:src="@drawable/pause"
            android:contentDescription="Play/Pause"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:tint="#000000"
            android:layout_marginHorizontal="4dp" />

        <ImageButton
            android:id="@+id/widget_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/skip_next"
            android:contentDescription="Next"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:tint="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>
